{
  "name": "ido-epo-translator",
  "version": "1.0.0",
  "description": "Ido-Esperanto Web Translator - Full-featured translation with Apertium",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "VITE_APP_VERSION=$npm_package_version tsc && vite build",
    "build:pages": "VITE_APP_VERSION=$npm_package_version tsc && vite build --base=/ido-epo-translator/",
    "preview": "vite preview",
    "cf:dev": "wrangler dev --assets dist",
    "cf:deploy": "wrangler deploy",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && wrangler deploy"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wrangler": "^4.42.2"
  }
}
